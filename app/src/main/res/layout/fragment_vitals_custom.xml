                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:paddingStart="@dimen/_20sdp"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
