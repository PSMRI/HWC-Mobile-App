<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_home"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="org.piramalswasthya.cho.ui.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_registerPatientFragment"
            app:destination="@id/registerPatientFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerPatientFragment"
        android:name="org.piramalswasthya.cho.ui.register_patient_activity.RegisterPatientFragment"
        android:label="RegisterPatientFragment" >
        <action
            android:id="@+id/action_registerPatientFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    
    <!-- Maternal Health Delivery Outcome -->
    <fragment
        android:id="@+id/deliveryOutcomeFragment"
        android:name="org.piramalswasthya.cho.ui.commons.maternal_health.delivery_outcome.DeliveryOutcomeFragment"
        android:label="Delivery Outcome"
        xmlns:tools="http://schemas.android.com/tools"
        tools:layout="@layout/fragment_new_form">
        <argument
            android:name="patientID"
            app:argType="string" />
        <action
            android:id="@+id/action_deliveryOutcomeFragment_to_infantRegListFragment"
            app:destination="@id/infantRegListFragment" />
    </fragment>

    <!-- Infant Registration List for specific mother -->
    <fragment
        android:id="@+id/infantRegListFragment"
        android:name="org.piramalswasthya.cho.ui.commons.maternal_health.infant_reg.InfantRegListFragment"
        android:label="Infant Registration List"
        xmlns:tools="http://schemas.android.com/tools"
        tools:layout="@layout/fragment_list">
        <argument
            android:name="patientID"
            app:argType="string" />
        <action
            android:id="@+id/action_infantRegListFragment_to_infantRegFragment"
            app:destination="@id/infantRegFragment" />
    </fragment>

    <!-- Infant Registration Form -->
    <fragment
        android:id="@+id/infantRegFragment"
        android:name="org.piramalswasthya.cho.ui.commons.maternal_health.infant_reg.InfantRegFragment"
        android:label="Infant Registration"
        xmlns:tools="http://schemas.android.com/tools"
        tools:layout="@layout/fragment_new_form">
        <argument
            android:name="patientID"
            app:argType="string" />
        <argument
            android:name="babyIndex"
            app:argType="integer" />
    </fragment>
</navigation>